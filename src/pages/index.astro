---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Journal from '../components/Journal.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Matt Stenback";
---

<Layout title="Hey, Hi, Hello">
	<div class='z-0 fixed top-0 sm:left-8 md:inset-x-0 w-px bg-cartridge-500 h-screen mx-auto'></div>
	<div class='absolute top-0 inset-x-0 bottom-40 bg-cartridge'></div>

	<p id="matt-stenback" class="sm:max-md:hidden fixed top-8 left-6 font-mono text-sm text-purple text-vertical whitespace-nowrap transition-all duration-1000 -translate-x-10 opacity-0">{pageTitle}</p>

	<main class="container mx-auto px-10">
		<Hero />
		<About />
		<Journal />

		<div class="flex pt-32 md:justify-center max-sm:pl-1">
			<h3 class="font-headline text-9xl text-purple text-vertical whitespace-nowrap z-10 pr-8">
				Thanks for stopping by
			</h3>
		</div>
	</main>

	<Footer />
</Layout>
