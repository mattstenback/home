---
import Bookmark from "./Bookmark.astro";
import bookmarks from "../../public/bookmarks.json";
---

<div class="flex pt-32 md:justify-center max-sm:pl-1">
  <h3 class="font-headline text-9xl text-purple text-vertical whitespace-nowrap z-10 pr-8">
    Bookmarks
  </h3>
</div>

<div class="py-32 max-sm:pl-7">
  {bookmarks.reverse().map((bookmark, index) => {
    const orientation = index % 2 === 0 ? 'right' : 'left';

    return <Bookmark title={bookmark.title} url={bookmark.url} tags={bookmark.tags} number={bookmark.number} orientation={orientation} />;
  })}
</div>
