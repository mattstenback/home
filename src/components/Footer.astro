const currentYear = new Date().getFullYear();
---

<footer class="container mx-auto px-10 pt-64 pb-8">
  <div class="md:flex md:justify-between max-sm:pl-7">
    <button id="colophon-toggle" class="font-mono text-sm underline underline-offset-4 decoration-orange hover:text-orange transition-colors duration-100 ease-linear cursor-none">
      Colophon
    </button>

    <p class="font-mono text-sm max-sm:mt-2">
