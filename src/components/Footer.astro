const currentYear = new Date().getFullYear();
---

<footer class="container mx-auto px-10 pt-64 pb-8 max-md:pt-8 max-md:px-6">
  <div class="md:flex md:justify-between max-md:pl-6">
    <p class="md:hidden mb-1">
      <a class="font-mono italic text-sm" href="mailto:hello@mattstenback.com">
        Email
      </a>
    </p>
    
    <p class="md:hidden mb-1">
      <a class="md:hidden font-mono italic text-sm" href="https://www.instagram.com/stenback" target="_blank">
