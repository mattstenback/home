---
const { number, title, tags, url, comment, orientation } = Astro.props;
---

<div class="grid grid-cols-9 gap-4 mb-4">
  <div class={`col-span-9 md:col-span-4 ${orientation === 'right' ? 'md:col-start-6' : 'md:text-right'} max-md:mb-4`}>
    <div class={`flex gap-x-4 font-mono italic text-xs mb-1 ${orientation === 'left' ? 'md:justify-end' : ''}`}>
      No.{number}
    </div>

    <h4 class="text-xl md:text-3xl">
      <a
        href={url}
        target="_blank"
        data-tippy-content={comment}
        data-tippy-placement="top"
        data-tippy-offset="[0, 40]"
        data-tippy-followCursor="horizontal"
        class="inline"
      >{ title }</a>
      <span
        class="hidden touch-screen-only ml-2 max-sm:inline"
        data-mobile-tippy="true"
        data-tippy-content={comment}
        data-tippy-placement="top"
        data-tippy-offset="[0, 30]"
      >
        &#65279;
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#9582d9" viewBox="0 0 256 256" class="inline"><path d="M216,40H40A16,16,0,0,0,24,56V184a16,16,0,0,0,16,16l59.5.06,14.78,24.17a16,16,0,0,0,27.41.06L156.53,200H216a16,16,0,0,0,16-16V56A16,16,0,0,0,216,40ZM84,132a12,12,0,1,1,12-12A12,12,0,0,1,84,132Zm44,0a12,12,0,1,1,12-12A12,12,0,0,1,128,132Zm44,0a12,12,0,1,1,12-12A12,12,0,0,1,172,132Z"></path></svg>
      </span>
    </h4>

    <div class={`flex gap-x-4 font-mono italic text-xs mt-4 ${orientation === 'left' ? 'md:justify-end' : ''}`}>
      { tags.map((tag) => {
       return <span>#{tag}</span>;
      }) }
    </div>
  </div>
</div>